{
  "manifest_version": 3,
  "name": "Tab Control Pro",
  "version": "2.0",
  "description": "Provides options to activate the left tab on close and open new tabs to the right.",

  "background": {
    "service_worker": "background.js"
  },

  "permissions": [
    "tabs",
    "storage"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Tab Control Pro Settings"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}